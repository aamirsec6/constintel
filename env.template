# GENERATOR: FULL_PLATFORM
# Environment Variables Template
# Copy this file to .env and fill in your values
# HOW TO USE: cp env.template .env && nano .env

# Database
DATABASE_URL="postgresql://constintel:constintel@localhost:5432/constintel?schema=public"
POSTGRES_USER=constintel
POSTGRES_PASSWORD=constintel
POSTGRES_DB=constintel

# Redis
REDIS_URL="redis://localhost:6379"

# Kafka/Redpanda (optional - falls back to Redis Streams if not set)
KAFKA_BROKERS="localhost:9092"
KAFKA_ENABLED="false"

# Backend API
BACKEND_PORT=3000
NODE_ENV=development
JWT_SECRET="change-me-in-production"

# ML Service
ML_SERVICE_PORT=8000
ML_MODEL_PATH="./models"
ML_FEATURE_STORE_PATH="./features"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_ML_API_URL="http://localhost:8000"

# Third-party Integrations (for INTEGRATIONS generator)

# Shopify Integration
# Get webhook secret from: Shopify Admin → Settings → Notifications → Webhooks
# After creating webhook, copy the secret from webhook details
SHOPIFY_WEBHOOK_SECRET=""
# Optional: Shopify API credentials (if using Admin API)
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""
# Your Shopify store domain (for reference)
SHOPIFY_STORE_DOMAIN=""

WOOCOMMERCE_API_URL=""
WOOCOMMERCE_CONSUMER_KEY=""
WOOCOMMERCE_CONSUMER_SECRET=""

TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_FROM=""

# Airflow
AIRFLOW_DATABASE_URL="postgresql://airflow:airflow@localhost:5432/airflow"
AIRFLOW_EXECUTOR=LocalExecutor

# Security
ENCRYPTION_KEY="change-me-in-production-32-chars-min"
LOG_LEVEL="info"

# Email Configuration
EMAIL_PROVIDER="smtp"  # Options: smtp, sendgrid, ses
EMAIL_FROM="noreply@constintel.com"
EMAIL_FROM_NAME="ConstIntel"

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=""

# AWS SES Configuration (if EMAIL_PROVIDER=ses)
AWS_SES_HOST="email-smtp.us-east-1.amazonaws.com"
AWS_SES_USER=""
AWS_SES_PASS=""

# Feature Flags
ENABLE_AUTO_MERGE="true"
MAX_AUTO_MERGE_PROFILES=3
ENABLE_ML_PREDICTIONS="true"

# Ollama Configuration
OLLAMA_URL="http://localhost:11434"
OLLAMA_MODEL="llama3:8b"
OLLAMA_ENABLED="true"
OLLAMA_TIMEOUT="30"
OLLAMA_MAX_TOKENS="1000"

# LLM Features
ENABLE_LLM_INSIGHTS="true"
ENABLE_LLM_QUERY="true"
ENABLE_ANOMALY_DETECTION="true"
ENABLE_REPORT_GENERATION="true"

# Conversation Settings (Siri-like LLM)
CONVERSATION_SESSION_TTL=86400  # 24 hours in seconds
ENABLE_PROACTIVE_INSIGHTS="true"
MAX_CONVERSATION_HISTORY=20  # Max messages in context

