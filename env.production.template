# GENERATOR: PRODUCTION_ENVIRONMENT
# Production Environment Template
# Copy this file to infra/instances/production/.env and fill in your values
# HOW TO USE: cp env.production.template infra/instances/production/.env && nano infra/instances/production/.env
# WARNING: Keep production secrets secure and never commit them to Git!

# Instance Configuration
INSTANCE_NAME=production
INSTANCE_ID=2

# Port Configuration (based on instance ID 2)
BACKEND_PORT=3020
FRONTEND_PORT=3021
ML_SERVICE_PORT=8020
POSTGRES_PORT=5434
REDIS_PORT=6381

# Database Configuration
DATABASE_NAME=constintel_production
POSTGRES_USER=constintel_production
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD
DATABASE_URL="postgresql://constintel_production:CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD@postgres:5432/constintel_production?schema=public"

# Redis
REDIS_URL="redis://redis:6379"

# Environment
NODE_ENV=production
LOG_LEVEL=error

# Backend API
BACKEND_PORT=3020
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_GENERATE_VERY_STRONG_SECRET_MIN_64_CHARS

# ML Service
ML_SERVICE_PORT=8020
ML_MODEL_PATH="./models"
ML_FEATURE_STORE_PATH="./features"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3020"
NEXT_PUBLIC_ML_API_URL="http://localhost:8020"

# Third-party Integrations
SHOPIFY_WEBHOOK_SECRET=""
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""
SHOPIFY_STORE_DOMAIN=""

WOOCOMMERCE_API_URL=""
WOOCOMMERCE_CONSUMER_KEY=""
WOOCOMMERCE_CONSUMER_SECRET=""

TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_FROM=""

# Airflow
AIRFLOW_DATABASE_URL="postgresql://airflow:airflow@localhost:5432/airflow"
AIRFLOW_EXECUTOR=LocalExecutor

# Security
ENCRYPTION_KEY=CHANGE_ME_IN_PRODUCTION_32_CHARS_MIN_VERY_STRONG

# Email Configuration
EMAIL_PROVIDER="smtp"
EMAIL_FROM="noreply@constintel.com"
EMAIL_FROM_NAME="ConstIntel"

# SMTP Configuration
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_SECURE="true"
SMTP_USER=""
SMTP_PASS=""

# SendGrid Configuration (recommended for production)
SENDGRID_API_KEY=""

# AWS SES Configuration (recommended for production)
AWS_SES_HOST="email-smtp.us-east-1.amazonaws.com"
AWS_SES_USER=""
AWS_SES_PASS=""

# Feature Flags
ENABLE_AUTO_MERGE="true"
MAX_AUTO_MERGE_PROFILES=3
ENABLE_ML_PREDICTIONS="true"

# Ollama Configuration
OLLAMA_URL="http://localhost:11434"
OLLAMA_MODEL="llama3:8b"
OLLAMA_ENABLED="true"
OLLAMA_TIMEOUT="30"
OLLAMA_MAX_TOKENS="1000"

# LLM Features
ENABLE_LLM_INSIGHTS="true"
ENABLE_LLM_QUERY="true"
ENABLE_ANOMALY_DETECTION="true"
ENABLE_REPORT_GENERATION="true"

# Production-specific Settings
DEBUG_MODE="false"
ALLOW_TEST_DATA="false"
VERBOSE_LOGGING="false"
ENABLE_BACKUP="true"
ENABLE_MONITORING="true"

