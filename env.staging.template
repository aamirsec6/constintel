# GENERATOR: STAGING_ENVIRONMENT
# Staging Environment Template
# Copy this file to infra/instances/staging/.env and fill in your values
# HOW TO USE: cp env.staging.template infra/instances/staging/.env && nano infra/instances/staging/.env

# Instance Configuration
INSTANCE_NAME=staging
INSTANCE_ID=1

# Port Configuration (based on instance ID 1)
BACKEND_PORT=3010
FRONTEND_PORT=3011
ML_SERVICE_PORT=8010
POSTGRES_PORT=5433
REDIS_PORT=6380

# Database Configuration
DATABASE_NAME=constintel_staging
POSTGRES_USER=constintel_staging
POSTGRES_PASSWORD=CHANGE_ME_IN_STAGING
DATABASE_URL="postgresql://constintel_staging:CHANGE_ME_IN_STAGING@postgres:5432/constintel_staging?schema=public"

# Redis
REDIS_URL="redis://redis:6379"

# Environment
NODE_ENV=staging
LOG_LEVEL=debug

# Backend API
BACKEND_PORT=3010
JWT_SECRET=CHANGE_ME_IN_STAGING_GENERATE_STRONG_SECRET

# ML Service
ML_SERVICE_PORT=8010
ML_MODEL_PATH="./models"
ML_FEATURE_STORE_PATH="./features"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3010"
NEXT_PUBLIC_ML_API_URL="http://localhost:8010"

# Third-party Integrations
SHOPIFY_WEBHOOK_SECRET=""
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""
SHOPIFY_STORE_DOMAIN=""

WOOCOMMERCE_API_URL=""
WOOCOMMERCE_CONSUMER_KEY=""
WOOCOMMERCE_CONSUMER_SECRET=""

TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_FROM=""

# Airflow
AIRFLOW_DATABASE_URL="postgresql://airflow:airflow@localhost:5432/airflow"
AIRFLOW_EXECUTOR=LocalExecutor

# Security
ENCRYPTION_KEY=CHANGE_ME_IN_STAGING_32_CHARS_MIN

# Email Configuration
EMAIL_PROVIDER="smtp"
EMAIL_FROM="staging@constintel.com"
EMAIL_FROM_NAME="ConstIntel Staging"

# SMTP Configuration
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""

# SendGrid Configuration (if using)
SENDGRID_API_KEY=""

# AWS SES Configuration (if using)
AWS_SES_HOST="email-smtp.us-east-1.amazonaws.com"
AWS_SES_USER=""
AWS_SES_PASS=""

# Feature Flags
ENABLE_AUTO_MERGE="true"
MAX_AUTO_MERGE_PROFILES=3
ENABLE_ML_PREDICTIONS="true"

# Ollama Configuration
OLLAMA_URL="http://localhost:11434"
OLLAMA_MODEL="llama3:8b"
OLLAMA_ENABLED="true"
OLLAMA_TIMEOUT="30"
OLLAMA_MAX_TOKENS="1000"

# LLM Features
ENABLE_LLM_INSIGHTS="true"
ENABLE_LLM_QUERY="true"
ENABLE_ANOMALY_DETECTION="true"
ENABLE_REPORT_GENERATION="true"

# Staging-specific Settings
DEBUG_MODE="true"
ALLOW_TEST_DATA="true"
VERBOSE_LOGGING="true"

